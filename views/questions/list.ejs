<% layout('layouts/boilerplate') %>
<h1>All questions</h1>

<% for(question of questions){ %>
<div class="card">
    <div class="card-body">
        <form action="/questions/<%= question._id %>/answers" method="GET">
            <button class="btn">
                <h5 class="card-title"><%= question.title %> </h5>
                <div class="card-text">
                    <%= question.description %>
                </div>
            </button>
        </form>
        <div class="card-link">
            <% if(user && user._id.equals(question.author)){ %>
            <a href="/questions/<%= question._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
            <form action="/questions/<%= question.id %>/delete?_method=delete" method="POST">
                <button class="btn btn-danger btn-sm">Delete</button>
            </form>
            <% } %>
            <a href="/questions/<%= question._id %>/answers/new" class="btn btn-info btn-sm">Answer the question</a>
        </div>
    </div>
</div>
<% } %>